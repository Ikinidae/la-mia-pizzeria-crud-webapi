<h1>Home</h1>

@*Inizializzo la property Model di RazorPage *@
@model List<Pizza>

@if (Model.Count() == 0)
{
    <h3 class="text-center">Non sono presenti pizze nel menù.</h3>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Descrizione</th>
                <th>Immagine</th>
                <th>Prezzo</th>
                <th>Azioni</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Pizza pizza in Model)
            {
                <tr>
                    <td><a href="@Url.Action("Detail",new {id = pizza.Id})">@pizza.Id</a></td>
                    <td class="title">@pizza.Name</td>
                    <td class="description">
                        @pizza.Description
                    </td>
                    <td class="image">
                        <img class="post-list-image" src="@pizza.Image" alt="pizza" width="600" height="300">
                    </td>
                    <td class="price">
                        @pizza.Price €
                    </td>
                    <td>                        
                        <a class="m-2 btn btn-info" asp-area="" asp-controller="Pizza" asp-action="Details" asp-route-id="@pizza.Id">Dettagli Pizza</a>
                        <a class="m-2 btn btn-warning" asp-area="" asp-controller="Pizza" asp-action="Update" asp-route-id="@pizza.Id">Modifica Pizza</a>
                        <form asp-controller="Pizza" asp-action="Delete" asp-route-id="@pizza.Id" method="post">
                            <button type="submit" class="m-2  btn btn-danger"> Elimina Pizza </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}