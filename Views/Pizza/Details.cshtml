@model Pizza

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex align-items-center">
                <h1 class="mt-3 mb-3">@Model.Name</h1>
            </div>
            <div class="post-single-image-container">
                <img src="@Model.Image" alt="pizza" width="900" height="600">
            </div>           
            <p>
                <strong>Descrizione:</strong>
                @Model.Description
            </p>
            <p>
                <strong>Prezzo:</strong>
                @Model.Price €
            </p>
            <p>
                <strong>Categoria:</strong>
                @Model.Category.Name
            </p>
            <p>
                <strong>Ingredienti:</strong>
                @if (Model.Ingredients.Count > 0)
                {
                    foreach (Ingredient ingredient in Model.Ingredients)
                    {
                        <div>
                            <span class="badge bg-primary">@ingredient.Name</span>
                        </div>
                    }                
                }
                else
                {
                        <span>Non sono stati selezionati ingredienti</span>
                }
                
            </p>
        </div>
    </div>
</div>